<PropertyList>
    <path>SinglePiston.ac</path>
    <nasal>
      <load>
        var livery_update = aircraft.livery_update.new("Aircraft/ogel/Models/Liveries");
      </load>
      <unload>
        livery_update.stop();
      </unload>
    </nasal>
    <animation>
      <type>material</type>
      <object-name>Fin</object-name>
      <property-base>sim/model/livery</property-base>
      <texture-prop>texture</texture-prop>
      <texture>schnuller.png</texture>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>Head</object-name>
        <object-name>Helmet</object-name>
        <object-name>Mouth</object-name>
        <property>/controls/flight/rudder</property>
        <factor>-90.0</factor>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
        <center>
            <x-m>0.450591</x-m>
            <y-m>0</y-m>
            <z-m>1.56498s</z-m>
        </center>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>Head</object-name>
        <object-name>Helmet</object-name>
        <object-name>Mouth</object-name>
        <property>/controls/flight/elevator</property>
        <factor>-45.0</factor>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.450591</x-m>
            <y-m>0</y-m>
            <z-m>1.56498</z-m>
        </center>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>LeftArm</object-name>
        <property>/controls/flight/aileron</property>
        <factor>+22.5</factor>
        <offset>+1</offset>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.45238</x-m>
            <y-m>0</y-m>
            <z-m>1.03347</z-m>
        </center>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>RightArm</object-name>
        <property>/controls/flight/aileron</property>
        <factor>-22.5</factor>
        <offset>+1</offset>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.45238</x-m>
            <y-m>0</y-m>
            <z-m>1.03347</z-m>
        </center>
    </animation>
    <animation>
        <type>spin</type>
        <object-name>Propeller</object-name>
        <property>/engines/engine/rpm</property>
        <factor>-0.1</factor>
        <max>30</max>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>-2.59587</x-m>
            <y-m>0</y-m>
            <z-m>-0.00174047</z-m>
        </center>
    </animation>
    <animation>
        <type>select</type>
        <object-name>Mouth</object-name>
        <condition>
            <property>sim/mouth-open</property>
        </condition>
    </animation>
    <animation>
        <object-name>Head</object-name>
        <object-name>Helmet</object-name>
        <object-name>Mouth</object-name>
        <type>select</type>
        <condition>
            <not><property>sim/current-view/internal</property></not>
        </condition>
    </animation>
</PropertyList>
